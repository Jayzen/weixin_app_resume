.container {
    display: flex;
    flex-direction: column;
}

/* 头部人物背景 */

.head-image {
    position: relative;
    width: 100%;
    height: 680rpx;
}

.user-image {
    height: 100%;
    width: 100%;
}

/* 近期来访 */

.mark {
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 40rpx;
    left: 50rpx;
    font-size: 20rpx;
    color: #aaa;
}

.mark text {
    margin-right: 6rpx;
}

/* 快捷功能区 */

.function {
    display: flex;
    position: absolute;
    transform: translateY(50%);
    bottom: 0;
    right: 30rpx;
}

.func-image {
    display: flex;
    margin-right: 26rpx;
    padding: 20rpx;
    border-radius: 50%;
    background: #fff;
    box-shadow: 0px 2px 6px #bbb;
}

.func-image image {
    width: 44rpx;
    height: 44rpx;
}