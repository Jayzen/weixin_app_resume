.container {
    display: flex;
    flex-direction: column;
    padding:0 50rpx 50rpx 50rpx;
}

.comments {
    margin-top: 30rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
}

.comments-content {
    box-sizing: border-box;
    border: 1px solid #9c7e4b;
    border-radius: 3px;
    padding: 20rpx;
    margin: 16rpx 0;
    height: 150rpx;
    width: 650rpx;
}

.submit {
    float:right;
    /* align-self:flex-end; */
    background-color: #9c7e4b;
    color: #fff;
    font-size: 24rpx;
    line-height: 24rpx;
    padding: 20rpx 30rpx;
    border-radius: 2px;
}

.avatar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    border-radius: 50%;
}