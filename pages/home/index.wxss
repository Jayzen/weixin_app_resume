.container {
    display: flex;
    flex-direction: column;
}

/* 头部人物背景 */

.head-image {
    position: relative;
    width: 100%;
    height: 680rpx;
}

.user-image {
    height: 100%;
    width: 100%;
}

/* 近期来访 */

.mark {
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 40rpx;
    left: 50rpx;
    font-size: 20rpx;
    color: #aaa;
}

.mark text {
    margin-right: 6rpx;
}

/* 快捷功能区 */

.function {
    display: flex;
    position: absolute;
    transform: translateY(50%);
    bottom: 0;
    right: 30rpx;
}

.func-image {
    display: flex;
    margin-right: 26rpx;
    padding: 20rpx;
    border-radius: 50%;
    background: #fff;
    box-shadow: 0px 2px 6px #bbb;
}

.func-image image {
    width: 44rpx;
    height: 44rpx;
}

/* 用户简介 */
.user-container {
    padding: 50rpx;
    box-sizing: border-box;
}

/* 用户信息 */
.add-wechat {
    color: #aaa;
    font-size: 20rpx;
    margin-left: 10rpx;
}

.save {
    padding: 10rpx 10rpx;
    line-height: 20rpx;
    background-color: #9c7e4b;
    color: #fff;
    font-size: 20rpx;
    border-radius: 2px;
}

/* 客户评论 */

.comments {
    margin-top: 30rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
}

.comments-content {
    box-sizing: border-box;
    border: 1px solid #9c7e4b;
    border-radius: 3px;
    padding: 20rpx;
    margin: 16rpx 0;
    height: 150rpx;
    width: 650rpx;
}

.submit {
    align-self: flex-end;
    background-color: #9c7e4b;
    color: #fff;
    font-size: 24rpx;
    line-height: 24rpx;
    padding: 10rpx 15rpx;
    border-radius: 2px;
}

.avatar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    border-radius: 50%;
}
