.container{
  display:flex;
  flex-direction: column;
}

/* 头部人物背景 */
.head-image{
  position:relative;
  width:100%;
  height:680rpx;
}

.user-image{
  height:100%;
  width:100%;
}

/* 点赞 */
.like{
  display:flex;
  position:absolute;
  right:0;
  top:100rpx;
  width:150rpx;
  padding:6rpx 0;
  justify-content: center;
  align-items:center;
  border-top-left-radius:3px;
  border-bottom-left-radius:3px;
  font-size:20rpx;
  color:#fff;
  background:#ACACAC;
}

.like-image{
  width:20rpx;
  height:20rpx;
  
}

.like-num{
  color:#9C7E4B;
}

.like text{
  margin-left:10rpx;
}

/* 近期来访 */
.mark{
  display:flex;
  align-items: center;
  position:absolute;
  bottom:40rpx;
  left:50rpx;
  font-size:20rpx;
  color:#aaa;
}

.mark text{
  margin-right:6rpx;
}

/* 快捷功能区 */
.function{
  display: flex;
  position:absolute;
  transform:translateY(50%);
  bottom:0;
  right:30rpx;
}

.func-image{
  display:flex;
  margin-right:26rpx;
  padding:20rpx;
  border-radius:50%;
  background:#fff;
  box-shadow:0px 2px 6px #bbb;
}

.func-image image{
  width:44rpx;
  height:44rpx;
}

/* 用户简介 */
.user-container{
  padding:50rpx;
  box-sizing: border-box;
}

.user-introduce{
  display:flex;
  flex-direction: column;
  padding-bottom:30rpx;
  border-bottom:1px solid #ddd;
}

.introduce-title{
  display:flex;
  align-items: center;
  margin-top:25rpx;
}

.name{
  font-size:34rpx;
  margin-right:36rpx;
}
.motto{
  font-size: 26rpx;
  line-height:26rpx;
  color:#aaa;
}

.introduce-content{
  margin-top:20rpx;
  font-size:24rpx;
  color:#9C7E4B;
  line-height:40rpx;
}

/* 用户信息 */
.user-info{
  display:flex;
  flex-direction: column;
  margin-top:30rpx;
  padding-bottom:30rpx;
  font-size:24rpx;
  border-bottom:1px solid #ddd;
}

.user-info > view{
  display:flex;
  /* height:50rpx; */
  margin:8rpx 0;
  align-items: center;
}

.icon{
  width:26rpx;
  height:26rpx;
  margin-right:20rpx;
}

.qrcode{
  width:50rpx;
  height:50rpx;
}

.info-imp{
  color:#9C7E4B;
  font-size:24rpx;
}

.add-wechat{
  color:#aaa;
  font-size:20rpx;
  margin-left:10rpx;
}

.save{
  padding:10rpx 10rpx;
  line-height:20rpx;
  background-color:#9C7E4B;
  color:#fff;
  font-size:20rpx;
  border-radius:2px;
}

/* 客户评论 */
.comments{
  margin-top:30rpx;
  font-size:24rpx;
  display:flex;
  flex-direction: column;
}

.comments-content{
  box-sizing: border-box;
  border:1px solid #9C7E4B;
  border-radius:3px;
  padding:20rpx;
  margin:16rpx 0;
  height:150rpx;
  width:650rpx;
}

.submit{
  align-self: flex-end;
  background-color:#9C7E4B;
  color:#fff;
  font-size:24rpx;
  line-height:24rpx;
  padding:10rpx 15rpx;
  border-radius:2px;
}