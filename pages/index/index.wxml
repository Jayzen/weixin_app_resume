<view class="container">
  <view class="head-image">
    <image class="user-image" src="/images/user.png"></image>
    <!-- 点赞 可用组件实现 -->
    <view class="like" bind:tap="onLike">
      <image class="like-image" src="/images/like_false.png"></image>
      <text class="like-num">{{user.like}}</text>
      <text>赞</text>
    </view>
    <!-- 近期来访 -->
    <view class="mark">
      <text>{{user.look_history}}</text>
      近期来访
    </view>
    <!-- 功能图标 -->
    <view class="function">
      <view class="func-image" bind:tap="makePhone">
        <image src="/images/phone.png"></image>
      </view>
      <view class="func-image">
        <image src="/images/position.png"></image>
      </view>
      <view class="func-image">
        <image src="/images/share.png"></image>
      </view>
    </view>
    
  </view>
  <view class="user-container">
    <!-- 用户介绍 -->
    <view class="user-introduce">
      <view class="introduce-title">
        <text class="name">{{user.name}}</text>
        <text class="motto">{{user.motto}}</text>
      </view>
      <text class="introduce-content">{{user.introduce}}</text>
    </view>

    <!-- 用户信息 -->
    <view class="user-info">
      <view class="info-imp">
        <image class="icon" src="/images/smail-icon/phone.png"></image>
        <text>{{user.phone}}</text>
      </view>
      <view class="info-imp">
        <image class="icon" src="/images/smail-icon/email.png"></image>
        <text>{{user.email}}</text>
      </view>
      <view>
        <image class="icon" src="/images/smail-icon/home.png"></image>
        <text>{{user.company}}</text>
      </view>
      <view>
        <image class="icon" src="/images/smail-icon/star.png"></image>
        <text>{{user.job}}</text>
      </view>
      <view>
        <image class="icon" src="/images/smail-icon/position.png"></image>
        <text>{{user.position}}</text>
      </view>
      <view>
        <image class="icon" src="/images/smail-icon/wechat.png"></image>
        <image class="qrcode" src="/images/qrcode.png"></image>
        <text class="add-wechat">·点击添加微信</text>
      </view>
      <view>
        <view class="icon"></view>
        <view class="save">保存通讯录</view>
      </view>
    </view>

    <!-- 客户评价 -->
    <view class="comments">
      <text>客户评论</text>
      <textarea class="comments-content" placeholder='请输入您的评论，入选后将显示在评论列表中。'></textarea>
      <view class="submit">发表</view>
    </view>
  </view>

</view>